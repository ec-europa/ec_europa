{
    "name": "ec-europa/ec_europa",
    "description": "EC Europa base theme.",
    "type": "drupal-theme",
    "license": "EUPL-1.1",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "anahkiasen/underscore-php" : "dev-master",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/preserve-paths": "^0.1",
        "drupal/admin_menu": "*",
        "drupal/atomium": "2.x-dev",
        "drupal/composer_autoloader": "^1.0",
        "drupal/date": "*",
        "drupal/date_views": "*",
        "drupal/date_popup": "*",
        "drupal/date_api": "*",
        "drupal/devel": "*",
        "drupal/drupal": "~7.0",
        "drupal/drupal-extension": "~3.4",
        "drupal/entity_translation": "*",
        "drupal/libraries": "*",
        "drupal/realistic_dummy_content": "*",
        "drupal/views": "*",
        "drush/drush": "^8",
        "friendsofphp/php-cs-fixer": "^2.10",
        "mikey179/vfsstream": "~1.2",
        "nuvoleweb/robo-config": "~0.1",
        "openeuropa/code-review": "^1.0.0-beta1",
        "openeuropa/task-runner": "^1.0.0-beta4",
        "peridot-php/leo": "~1.0",
        "phpunit/phpunit": "^5",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        }
    ],
    "scripts": {
        "post-update-cmd": "./vendor/bin/run drupal:site-setup",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "grumphp": "./vendor/bin/grumphp run",
        "behat": "./vendor/bin/behat"
    },
    "extra": {
        "patches": {
            "drupal/drupal": {
                "https://www.drupal.org/node/2482549": "https://www.drupal.org/files/issues/ignore_node_module-2482549-27_0.patch"
            }
        },
        "installer-paths": {
            "build/": ["type:drupal-core"],
            "build/profiles/{$name}/": ["type:drupal-profile"],
            "build/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "build/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "build/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "preserve-paths": [
            "build/sites/default"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
