{
    "name": "ec-europa/ec_europa",
    "description": "EC Europa base theme.",
    "type": "drupal-theme",
    "license": "EUPL-1.1",
    "homepage": "https://github.com/ec-europa/ec_europa",
    "require-dev": {
        "composer/installers": "^1.6",
        "drupal-composer/preserve-paths": "dev-master#7f99622800504c058e5230b63d3cd25809fa23ba",
        "drupal/admin_menu": "3.0.0-rc6",
        "drupal/atomium": "2.14",
        "drupal/composer_autoloader": "^1.0",
        "drupal/date": "2.10",
        "drupal/devel": "^1",
        "drupal/drupal": "^7.64",
        "drupal/drupal-extension": "~3.4",
        "drupal/entity_translation": "^1",
        "drupal/libraries": "2.5",
        "drupal/realistic_dummy_content": "^2",
        "drupal/views": "3.20",
        "drupol/drupal-conventions": "^1.4.2",
        "drush/drush": "^8.1.18",
        "mikey179/vfsstream": "^1.6",
        "openeuropa/task-runner": "1.0.0-beta4",
        "peridot-php/leo": "~1.0",
        "phpunit/phpunit": "^5",
        "webflo/drupal-finder": "^1.1",
        "webmozart/path-util": "^2.3"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        }
    ],
    "scripts": {
        "post-update-cmd": "./vendor/bin/run drupal:site-setup",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "grumphp": "./vendor/bin/grumphp run",
        "behat": "./vendor/bin/behat"
    },
    "extra": {
        "installer-paths": {
            "build/": ["type:drupal-core"],
            "build/profiles/{$name}/": ["type:drupal-profile"],
            "build/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "build/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "build/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "preserve-paths": [
            "build/sites/default"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "5.6"
        }
    }
}
