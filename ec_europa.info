settings[ec_europa_site_header_home] = 1
settings[ec_europa_multilingual] = 1
settings[allow_css_double_underscores] = 1

; Breakpoints
; --------------
breakpoints[wide] = only screen and (min-width: 992px)
breakpoints[normal] = (min-width: 768px) and (max-width: 991px)
breakpoints[medium] = (min-width: 480px) and (max-width: 767px)
breakpoints[narrow] = (min-width: 320px) and (max-width: 479px)
breakpoints[mobile] = (min-width: 0px) and (max-width: 319px)
multipliers[wide][] = 2x
multipliers[normal][] = 2x
multipliers[medium][] = 2x
multipliers[narrow][] = 2x
